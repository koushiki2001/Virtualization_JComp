                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Add a new Book</h3>
      
                  <form class="px-md-2" action="/book/create" method="post">
      
                    <div class="form-outline mb-4">
                      
                      <label class="form-label" for="title">Title</label>
                      <input type="text" id="title" class="form-control"  name="title"/>
                    </div>

                    <div class="form-outline mb-4">
                      
                        <label class="form-label" for="author">Author</label>
                        <input type="text" id="author" class="form-control"  name="author"/>
                      </div>

                      <div class="form-outline mb-4">
                      
                        <label class="form-label" for="publisher">Publisher</label>
                        <input type="text" id="publisher" class="form-control"  name="publisher"/>
                      </div>

                      <div class="form-outline mb-4">
                      
                        <label class="form-label" for="pages">Pages</label>
                        <input type="text" id="pages" class="form-control"  name="pages"/>
                      </div>

      


      
                    <button type="submit" class="btn btn-success btn-lg mb-1">Add</button>
      
                  </form>
      
